generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "sqlite"
    url      = "file:./dev.db"
}

model User {
    id      Int     @id @default(autoincrement())
    name    String
    email   String? @unique
    company String?
    wish    String?
    books   Book[]
}

model Book {
    id        Int      @id @default(autoincrement())
    title     String
    author    String?
    publisher String?
    free      Boolean?
    QRcode    String?  @unique
    ISBN      String?  @unique
    users     User[]
}
