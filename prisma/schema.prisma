generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "sqlite"
    url      = "file:./dev.db"
}

model User {
    id       Int        @id @default(autoincrement())
    name     String
    email    String?    @unique
    company  String?
    wish     String?
    books    Book[]
    Wishlist Wishlist[]
}

model Book {
    id        Int      @id @default(autoincrement())
    title     String
    author    String?
    publisher String?
    isFree    Boolean?
    QRcode    String?  @unique
    ISBN      String?  @unique
    users     User[]
}

model Wishlist {
    id        Int     @id @default(autoincrement())
    title     String
    author    String?
    publisher String?
    QRcode    String? @unique
    ISBN      String? @unique
    users     User[]
}
